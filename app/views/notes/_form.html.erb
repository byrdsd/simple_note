<%= form_with model: note, local: true, method: method, html: { class: "sn-Form" } do |f| %>

  <%= form_field do %>
    <%= f.label :title, class: "sn-FormField-label" %>
    <%= f.text_field :title, class: "sn-FormField-input", maxlength: 30 %>
  <% end %>

  <%= form_field do %>
    <%= f.label :body, class: "sn-FormField-label" %>
    <%= f.text_area :body, class: "sn-FormField-textarea", rows: 4, maxlength: 1000 %>
  <% end %>

  <%= form_field do %>
    <%= f.submit class: "sn-Button" %>
    <%= link_to :Cancel, notes_path, class: "sn-Button sn-Button--cancel" %>
  <% end %>
<% end %>
